WindowManager:#:kivy !
    Home:
    GameMode:
    QuizQues1:
    QuizQues2:
    QuizQues3:
    QuizQues4:
    QuizQues5:
    RapidFire:
    Facts:
    SolarFacts:
    Result:
    EndScreen:

<Home>:
    name: "home"
    
    GridLayout:
        cols: 1
        
        Button:
            text: "Game Modes"
            pos_hint: {'x': 0, 'y': 0}
            size_hint: (1, 1)
            font_size: (root.width**2 + root.height**2)/14**4
            
            on_release:
                app.root.current = "gamemode"
                root.manager.transition.direction = "left"
        
        # Button:
            # text: "Settings"
            # pos_hint: {'x':0, 'y':.5}
            # size_hint: (1, .5)

<GameMode>:
    name: "gamemode"
    
    GridLayout:
        cols: 1    
        
        Button:
            text: "Space Quiz"
            pos_hint: {'x': 0, 'y': .8}
            size_hint: (1, .2)
            font_size: (root.width**2 + root.height**2)/14**4
            
            on_release:
                app.root.current = "quizques1"
                root.manager.transition.direction = "left"

        Button:
            text: "Rapid Fire"
            pos_hint: {'x': 0, 'y': .6}
            size_hint: (1, .2)
            font_size: (root.width**2 + root.height**2)/14**4
            
            on_release:
                app.root.current = "rapidfire"
                root.manager.transition.direction = "left"        

        Button:
            text: "Space Facts"
            pos_hint: {'x': 0, 'y': .4}
            size_hint: (1, .2)
            font_size: (root.width**2 + root.height**2)/14**4
            
            on_release:
                app.root.current = "facts"
                root.manager.transition.direction = "left"

        Button:
            text: "Planet Facts"
            pos_hint: {'x': 0, 'y': .2}
            size_hint: (1, .2)
            font_size: (root.width**2 + root.height**2)/14**4
            
            on_release:
                app.root.current = "solarfacts"
                root.manager.transition.direction = "left" 

        Button:
            text: "Home"
            pos_hint: {'x': 0, 'y': 0}
            size_hint: (1, .2)
            font_size: (root.width**2 + root.height**2)/14**4
            
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "right"

<QuizQues1>:
    name: "quizques1"
    GridLayout:
        cols: 2
        
        GridLayout:
            cols: 1
            pos_hint: {'x': 0, 'y': 0}
            size_hint: (.8, 1)

            GridLayout:
                cols: 1
                size_hint: (.8, .25)

                WrappedLabel:
                    id: questionlabel
                    text: root.question
                    # pos_hint: {'top':0.5,'right':0.5}
                    halign: 'left'
                    valign: 'middle'
                    padding_x: 10
                    text_size: self.size
            
            GridLayout:
                cols: 1
                size_hint: (.8, .75)
                
                Button:
                    text: root.opt1
                    text_size: self.size
                    size_hint: (1, .25)
                    valign: 'middle'
                    padding_x: 10
                Button:
                    text: root.opt2
                    text_size: self.size
                    size_hint: (1, .25)
                    valign: 'middle'
                    padding_x: 10
                Button:
                    text: root.opt3
                    text_size: self.size
                    size_hint: (1, .25)
                    valign: 'middle'
                    padding_x: 10
                Button:
                    text: root.opt4
                    text_size: self.size
                    size_hint: (1, .25)
                    valign: 'middle'
                    padding_x: 10

        GridLayout:
            cols: 1
            pos_hint: {'x': 1, 'y': 0}
            size_hint: (.2, 1)

            Button:
                text: "Next Question"
                size_hint: (1, .2)
                
                on_release:
                    app.root.current = "quizques2"

